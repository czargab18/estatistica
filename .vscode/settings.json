{
  "files.exclude": {
    // OCULTAR DA RAIZ
    ".editorconfig": true,
    ".htaccess": true,
    "CNAME": true,
    "404.html": true,
    // OCULTAR ARQUIVOS GIT
    "**/.git": true,
    "**/.github/copilot/": true,
    "**/.github/ISSUE_TEMPLATE/": true,
    // OCULTAR SUBMODULOS GIT
    // submodulo API
    "api/**/.git": true,
    "api/**/.github": false,
    "api/**/.vscode": true,
    "api/**/.devcontainer": true,
    // submodulo API
    "books/**/.git": true,
    "books/**/.gitignore": true,
    "books/**/.github": false,
    "books/**/.vscode": true,
    "books/**/.devcontainer": true,
    "books/**/.quarto": true,
    "books/**/_book": true,
    // submodulo NEWSHUB
    "newshub/**/.git": true,
    "newshub/**/.gitignore": true,
    "newshub/**/.github": false,
    "newshub/**/.vscode": true,
    // submodulo API
    "backend/**/.git": true,
    "backend/**/.github": false,
    "backend/**/.vscode": true,
    "backend/**/.devcontainer": true,
    // ocultar arquivos backend
    "backend/**/.venv": false,
    "backend/**/pyproject.toml": false,
    "backend/**/.python-version": true,
    "backend/**/MANIFEST.in": true,

    // OCULTAR OUTROS ARQUIVOS
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    // OCULTAR ARQUIVOS PYTHON
    "**/*.egg-info": true,
    // OCULTAR OUTRAS PASTAS
    "**/*env*/": true,
    "**/.quarto/": true,
    "**/delete/": true,
    "**/*libs*/": true
  },

  // Configurações: Editor (MELHORADO)
  "editor.rulers": [80, 120],
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  "editor.wrappingIndent": "same",
  "editor.fontSize": 15,
  "editor.lineHeight": 1.8,
  "editor.stickyScroll.enabled": false,
  "editor.parameterHints.enabled": false,
  "editor.renderLineHighlight": "gutter",
  "editor.suggestSelection": "first",
  "editor.fontLigatures": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.accessibilitySupport": "off",
  "editor.tabSize": 2,
  "editor.hideCursorInOverviewRuler": true,
  "editor.scrollbar.vertical": "hidden",

  // ✅ DESATIVAR ITENS ENFATIZADOS
  "editor.occurrencesHighlight": "off", // Desativa destaque de ocorrências
  "editor.selectionHighlight": false, // Desativa destaque de seleções similares
  "editor.renderLineHighlight": "none", // Desativa destaque da linha atual (sobrescreve "gutter")
  "editor.matchBrackets": "never", // Desativa destaque de parênteses correspondentes
  "editor.guides.bracketPairs": false, // Desativa linhas guia de pares de colchetes
  "editor.guides.bracketPairsHorizontal": false, // Desativa guias horizontais de colchetes
  "editor.guides.highlightActiveBracketPair": false, // Desativa destaque do par ativo
  "editor.guides.indentation": false, // Desativa linhas de indentação
  "editor.guides.highlightActiveIndentation": false, // Desativa destaque da indentação ativa
  "editor.bracketPairColorization.enabled": false, // Desativa colorização de pares de colchetes
  "editor.linkedEditing": false, // Desativa edição vinculada de tags HTML
  "editor.foldingHighlight": false, // Desativa destaque de regiões dobráveis
  "editor.showFoldingControls": "never", // Remove controles de dobra de código

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,

  // Snippets personalizados
  "editor.snippetSuggestions": "top",
  "editor.suggest.snippetsPreventQuickSuggestions": false,

  // Melhorar sugestões do Copilot
  "editor.inlineSuggest.enabled": true,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "on",
    "strings": "on"
  },

  // Configurações: terminal
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.env.windows": {
    "PYTHONIOENCODING": "utf-8",
    "PATH": "${env:PATH};${workspaceFolder}\\backend\\bin\\"
  },
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.defaultProfile.osx": "fish",

  // Configurações:Python
  "python-envs.defaultEnvManager": "ms-python.python:venv",
  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python-envs.pythonProjects": [],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestArgs": ["-v", "-s", "./test", "-p", "test_*.py"],

  // Configurações: JavaScript
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Configurações: TypeScript
  "typescript.tsserver.log": "off",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.preferTypeOnlyAutoImports": true,

  // Configurações: Extensões
  "extensions.ignoreRecommendations": true,

  // Configurações: Explorador de Arquivos
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock"
  },
  "explorer.fileNesting.enabled": true,

  // Configurações: Workbench
  "workbench.tree.enableStickyScroll": false,
  "workbench.editor.labelFormat": "short",
  "workbench.statusBar.visible": false,
  "workbench.layoutControl.enabled": false,
  "workbench.preferredDarkColorTheme": "poimandres-noitalics",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "symbols",
  "workbench.editor.empty.hint": "hidden",

  // ✅ DESATIVAR MAIS DESTAQUES
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#00000000", // Remove fundo de seleção
    "editor.selectionHighlightBackground": "#00000000", // Remove destaque de seleções
    "editor.wordHighlightBackground": "#00000000", // Remove destaque de palavras
    "editor.wordHighlightStrongBackground": "#00000000", // Remove destaque forte
    "editorBracketMatch.background": "#00000000", // Remove fundo de parênteses correspondentes
    "editorBracketMatch.border": "#00000000" // Remove borda de parênteses correspondentes
  },

  // Configurações: Git
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",
  "gitlens.advanced.messages": {
    "suppressIntegrationRequestTimedOutWarning": true
  },

  // Configurações: Segurança
  "security.workspace.trust.untrustedFiles": "newWindow",
  "security.promptForLocalFileProtocolHandling": false,

  // Configurações: Atualizações
  "update.mode": "manual",
  "update.showReleaseNotes": false,

  // Configurações: Janela
  "window.commandCenter": false,
  "window.titleBarStyle": "native",
  "window.autoDetectColorScheme": true,

  // Configurações: Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "mdx": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "javascript": "jsx",
    "mdx": "jsx"
  },

  // Configurações: Formatação
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit" // ✅ ADICIONADO
  },
  "eslint.validate": ["javascript", "javascriptreact", "graphql"],
  "[prisma]": {
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // ✅ CORRIGIDO
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // ✅ ADICIONADO
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // ✅ ADICIONADO
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter", // ✅ ADICIONADO
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  // Configurações: Live Server
  "liveServer.settings.donotShowInfoMsg": true,

  // Configurações: Grunt
  "grunt.autoDetect": "on",

  // Configurações: Jake
  "jake.autoDetect": "on",

  // Configurações: Gulp
  "gulp.autoDetect": "on",

  // Configurações: Associações de Arquivos
  "files.associations": {
    ".env.*": "dotenv",
    ".prettierrc": "json",
    "*.css": "css",
    ".dev.vars": "dotenv",
    "*.rmd": "rmd",
    "*.r": "r",
    "*.qmd": "quarto",
    "*.mdx": "markdown",
    "*.graphql": "graphql",
    "*.gql": "graphql",
    "*.ts": "typescript",
    "*.tsx": "typescriptreact",
    "*.vue": "vue",
    "*.svelte": "svelte"
  },
  "symbols.files.associations": {
    "*.module.ts": "nest",
    "*.guard.ts": "typescript",
    "*.spec.ts": "ts-test",
    "*.e2e-spec.ts": "ts-test",
    "*.mock.ts": "ts-test",
    "vitest.config.e2e.ts": "vite",
    ".env.development.local": "gear",
    ".env.test.local": "gear",
    ".env.local": "gear",
    ".env.example": "gear",
    "*.resolver.ts": "typescript",
    "*.dto.ts": "typescript",
    "*.entity.ts": "typescript",
    "*.service.ts": "typescript",
    "*.controller.ts": "typescript"
  },

  // Configurações: Quarto
  "quarto.render.previewType": "external",
  "quarto.preview.navigate": true,

  // Configurações: Markdown
  "markdown.preview.scrollPreviewWithEditor": true,
  "markdown.preview.scrollEditorWithPreview": true,
  "markdown.extension.toc.updateOnSave": true,

  // Configurações: HTML/CSS
  "html.format.wrapLineLength": 120,
  "css.lint.unknownAtRules": "ignore",

  // Configurações: Spell Check (se extensão instalada)
  "cSpell.words": ["estatistica", "quarto", "cesargabriel", "newsroom", "ira"],
  "cSpell.language": "pt-BR,en",

  // Configurações de busca inteligente
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.venv": true,
    "**/*cache*": true,
    "**/*.pyc": true,
    "**/dist": true
  },

  // Melhorar performance do Copilot
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    "**/.venv/**": true,
    "**/*cache*": true,
    "**/*.pyc": true,
    "**/dist": true,
    "**/*env*/*": true,
    "**/.quarto/**": true
  },

  // Configurações: GitHub Copilot (MELHORADO)
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "python": true,
    "javascript": true,
    "typescript": true,
    "html": true,
    "css": true,
    "json": true,
    "jsonc": true
  },

  // Configurações avançadas do Copilot
  "github.copilot.chat.localeOverride": "pt-br",
  "github.copilot.chat.reviewSelection.enabled": false, // ✅ ADICIONADO
  "github.copilot.editor.enableAutoCompletions": true, // ✅ ADICIONADO

  // Configurações: GitHub Pull Requests (ADICIONADO)
  "githubPullRequests.useReviewMode": false, // ✅ ADICIONADO
  "githubPullRequests.pullBranch": "never", // ✅ ADICIONADO
  "githubPullRequests.createOnPublishBranch": "never" // ✅ ADICIONADO
}
