{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      }
    },
    {
      "name": "Python: Debug Site Manager",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/actions/run/site_html_manager.py",
      "console": "integratedTerminal",
      "args": ["--only-head", "--dry-run", "--path", "./book/"],
      "justMyCode": false
    }
  ]
}