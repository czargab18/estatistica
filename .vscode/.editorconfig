root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,js,ts,html,css,json,yaml,yml}]
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[Makefile]
indent_style = tab