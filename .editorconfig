# EditorConfig - Configuração de Formatação Universal
# https://editorconfig.org

root = true

# Configurações padrão para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Arquivos de código (2 espaços)
[*.{js,ts,jsx,tsx,html,css,scss,json,yaml,yml,md}]
indent_size = 2

# Python (4 espaços, seguindo PEP 8)
[*.py]
indent_size = 4
max_line_length = 88

# Markdown (preserva trailing spaces, 80 chars)
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Makefiles (tabs obrigatórios)
[Makefile]
indent_style = tab

# Arquivos de configuração específicos
[*.{toml,ini,cfg}]
indent_size = 4

# Arquivos batch/shell
[*.{bat,sh}]
end_of_line = crlf

[*.sh]
end_of_line = lf

# JSON (2 espaços)
[*.{json,jsonc}]
indent_size = 2

# XML/SVG (2 espaços)
[*.{xml,svg}]
indent_size = 2

# YAML (2 espaços)
[*.{yml,yaml}]
indent_size = 2

# Package management
[{package.json,package-lock.json,yarn.lock}]
indent_size = 2

# Python específico
[{setup.py,setup.cfg,pyproject.toml}]
indent_size = 4
